{
  "compilerOptions": {
    "outDir": "dist/ts",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "stripInternal": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/contracts/**/*"]
}
